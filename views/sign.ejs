      <div class="container pt-lg-7">
        <div class="row justify-content-center">
          <div class="col-lg-5">
            <div class="card bg-secondary shadow border-0">
              <div class="card-header bg-white pb-5">
                <div class="text-muted text-center mb-3"><h1><small>Inscription</small></h1></div>
                
              <div class="card-body px-lg-5 py-lg-5">
                <div class="text-center text-muted mb-4">
                  <img src="images/logo.jpg" width="50" height="50">
                </div>
                <form role="form" action="/signup" id="signupForm" method="post">
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                      <input class="form-control" placeholder="Nom d'utilisateur" name="username" required type="text">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                        <span class="input-group-text"><i class="fa fa-key"></i></span>
                      <input class="form-control" placeholder="password" type="password" name="password" required>
                    </div>
                  </div>
                  <div class="form-group ">
                    <div class="input-group input-group-alternative">
                        <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                      <input class="form-control" placeholder="confirm_password" type="password" name="confirmPassword" required>
                    </div>
                  </div>
                  
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary mt-4" > Validation</button>
                  </div>
                  <div class="text-center">
                    <button type="button" class="btn btn-secondary mt-1" onclick="redirection()"><i class="fa fa fa-user "></i></a></button>
                  </div>
                </form>
                
              </div>
            </div>
          </div>
        </div>
